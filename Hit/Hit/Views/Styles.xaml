    <Color x:Key="ControlMediumColor">#ffFFFFFF</Color>
    <Color x:Key="ControlDarkColor">#ffFFFFFF</Color>

    <Color x:Key="GlyphColor">#ff000000</Color>
    <Color x:Key="GlyphMouseOver">Green</Color>

    <!--Border colors-->
