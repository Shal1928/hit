            <TextBlock Text="Пт" Style="{DynamicResource TextBlockFridayChartStyle}" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" />
        </Grid>



        <!--********************-->
        <!--***              ***-->
        <!--***      ***-->
