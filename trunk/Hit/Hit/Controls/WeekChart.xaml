              Grid.Column="1" Grid.Row="1" Visibility="{Binding Configuration.TuesdayIsVisible, Converter={ConvertersUA:BoolToVisibilityConverter}, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">
