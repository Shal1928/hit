<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="ABBYYColor">#ffC20E31</Color>
    <SolidColorBrush x:Key="ABBYYSolidBrush" Color="{StaticResource ABBYYColor}" />

    <LinearGradientBrush x:Key="ABBYYGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <LinearGradientBrush.GradientStops>
            <GradientStop Color="{StaticResource ABBYYColor}" Offset="0" />
            <GradientStop Color="#ffFFFFFF" Offset="0.8" />
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>


    <Style x:Key="ExpanderStyle" TargetType="{x:Type Expander}">

        <Setter Property="IsExpanded" Value="False" />
        
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="#ffFFFFFF" />
        
        <Setter Property="FontSize" Value="10" />
        <Setter Property="Foreground" Value="DarkGray" />

        <Setter Property="Margin" Value="0,15,0,0" />
        
        <Style.Triggers>
            <Trigger Property="IsExpanded" Value="True">
                <Setter Property="Foreground" Value="DarkGray"/>
            </Trigger>
            <Trigger Property="IsExpanded" Value="False">
                <Setter Property="Foreground" Value="#ff000000"/>
            </Trigger>
        </Style.Triggers>

    </Style>

    


</ResourceDictionary>